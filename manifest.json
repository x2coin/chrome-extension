{
  "manifest_version": 3,
  "name": "X 2 Coin",
  "description": "Create crypto coins from any X.com post",
  "version": "1.0",
  "icons": {
    "128": "extension_icon.png"
  },
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": [
    "https://x.com/*",
    "https://x2co.in/*",
    "https://pump.fun/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x2co.in/*",
        "https://x.com/*",
        "https://pump.fun/*"
      ],
      "js": ["content.js"]
    }
  ]
}
